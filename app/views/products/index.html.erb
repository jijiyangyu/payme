<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="row">
    <div class="col-xs-9">
        <div class="row">
            <div class="col-xs-4">Picture</div>
            <div class="col-xs-4">Store</div>
            <div class="col-xs-4">Price</div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="row">
            <div class="col-xs-12">Action</div>
        </div>
    </div>
</div>
<% @products.each do |product| %>
<div class="row">
    <div class="col-xs-9">
        <div class="row">
            <div class="col-xs-4"><div class="thumbnail"><%= image_tag(product.image_url) %></div></div>
            <div class="col-xs-4"><%= link_to product.store.name, product.address %></div>
            <div class="col-xs-4"><%= product.price %></div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="row">
            <div class="col-xs-4"><%= link_to 'Show', product %></div>
            <div class="col-xs-4"><%= link_to 'Edit', edit_product_path(product) %></div>
            <div class="col-xs-4"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
    </div>
</div>
<% end %>

<br>

<%= link_to new_product_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Product
  <%end%>
